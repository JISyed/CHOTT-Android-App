<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.jisyed.chott" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.CategorySelectionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProjectSelectionActivity"
            android:label="@string/title_activity_project_selection" >
        </activity>
        <activity
            android:name=".activities.ProjectSessionTimerActivity"
            android:label="@string/title_activity_project_session_timer" >
        </activity>
        <activity
            android:name=".activities.AddProjectActivity"
            android:label="@string/title_activity_add_project" >
        </activity>
        <activity
            android:name=".activities.ProjectHistoryActivity"
            android:label="@string/title_activity_project_history" >
        </activity>
    </application>

</manifest>
