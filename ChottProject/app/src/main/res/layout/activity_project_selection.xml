<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="io.github.jisyed.chott.activities.ProjectSelectionActivity"
                android:background="@color/colorChottBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/colorChottCodeRegular"
            android:id="@+id/llProjectTopHeader">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ivProjectCurrProjectIcon"
                android:src="@drawable/icon_code"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Code"
                android:id="@+id/tvProjectCurrProjectName"
                android:textColor="@color/sysWhite"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/ibProjectAddProject"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_add"
                android:layout_marginRight="16dp"
                android:scaleType="fitStart"
                android:padding="12dp"
                android:background="@color/colorChottCodeDark"/>

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewProjects"
            android:background="@color/colorChottBackground"/>
    </LinearLayout>
</RelativeLayout>
